{
    "name": "i3wm Control",
    "description": "Control i3wm to logout, restart, or shutdown",
    "developer_name": "Sukarya",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.1
    },
    "default_hotkey": "Ctrl+Alt+Del",
    "preferences": [
        {
            "id": "logout_command",
            "type": "text",
            "name": "Logout Command",
            "description": "Command to execute for logging out",
            "default_value": "i3-msg exit"
        },
        {
            "id": "restart_command",
            "type": "text",
            "name": "Restart Command",
            "description": "Command to execute for restarting",
            "default_value": "systemctl reboot"
        },
        {
            "id": "shutdown_command",
            "type": "text",
            "name": "Shutdown Command",
            "description": "Command to execute for shutting down",
            "default_value": "systemctl poweroff"
        }
    ],
    "version": "1.0.0",
    "include": [
        "main.py"
    ]
}
